
@model WPTestPJ.Web.Models.WPUserAddModel

<div class="modal fade modal-draggable" id="wpUserAddModal" tabindex="-1" aria-hidden="true">

    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("Index", "Home", new { }, FormMethod.Post, new
                {
                    @class = "form-horizontal",
                    role = "form",
                    id = "formWPUserAddModal",
                    enctype = "multipart/form-data"
                }))
            {
                @Html.AntiForgeryToken()

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="modal-label"><i class="fa fa-map-marker"></i> WPユーザー追加</h4>
                </div>
                <div class="modal-body">
                    <div class="validation-summary-valid">
                        <ul></ul>
                    </div>

                    <div class="table modalInputBlock">
                        <div class="table-row">
                            <div class="table-cell labelCell">@Html.LabelFor(x => x.LoginID)</div>
                            <div class="table-cell inputCell">
                                @Html.TextBoxFor(x => x.LoginID, new { @maxlength = "120" })
                                <div>@Html.ValidationMessageFor(x => x.LoginID)</div>
                            </div>
                        </div>
                        <div class="table-row">
                            <div class="table-cell labelCell"><label>名前</label></div>
                            <div class="table-cell inputCell userName">
                                @Html.TextBoxFor(x => x.LastName, new { @maxlength = "120" })
                                @Html.TextBoxFor(x => x.FirstName, new { @maxlength = "120" })
                                <div>@Html.ValidationMessageFor(x => x.LastName)</div>
                                <div>@Html.ValidationMessageFor(x => x.FirstName)</div>
                            </div>
                        </div>
                        @*<div class="table-row">
                            <div class="table-cell labelCell">@Html.LabelFor(x => x.FirstName)</div>
                            <div class="table-cell inputCell">
                                @Html.TextBoxFor(x => x.FirstName, new { @maxlength = "120" })
                                <div>@Html.ValidationMessageFor(x => x.FirstName)</div>
                            </div>
                        </div>*@
                        <div class="table-row">
                            <div class="table-cell labelCell">@Html.LabelFor(x => x.Email)</div>
                            <div class="table-cell inputCell">
                                @Html.TextBoxFor(x => x.Email, new { @maxlength = "120" })
                                <div>@Html.ValidationMessageFor(x => x.Email)</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-default" data-dismiss="modal" aria-hidden="true"><i class="fa fa-times"></i> 閉じる</button>
                    <button type="button" id="btnAddSubmit" value="保存" class="btn btn-default" onclick="">
                        <i class="fa fa-floppy-o"></i> 保存
                    </button>
                </div>
            }
        </div>
    </div>
</div>